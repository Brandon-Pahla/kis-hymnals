{
  "number": 607,
  "language": "es",
  "title": "Nítido rayo por Cristo",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Nítido rayo por Cristo"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Nítido rayo por Cristo,",
        "yo quiero siempre ser;",
        "en todo quiero agradarle,",
        "y hacerlo con placer."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Coro:",
        "Un nítido rayo,",
        "nítido rayo por Cristo.",
        "Un nítido rayo,",
        "nítido rayo seré."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "A Cristo quiero acercarme",
        "en mi temprana edad;",
        "por siempre quiero amarlo",
        "y hacer su voluntad."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Nítido rayo en tinieblas",
        "deseo siempre ser.",
        "Almas perdidas a Cristo",
        "anhelo conducir."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Una mansión en el cielo",
        "fue Cristo a preparar;",
        "y cuando venga a buscarme",
        "con él iré a morar."
      ],
      "number": 6
    }
  ]
}