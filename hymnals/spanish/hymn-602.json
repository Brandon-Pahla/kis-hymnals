{
  "number": 602,
  "language": "es",
  "title": "Es el amor divino",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "Es el amor divino",
        "mi gozo y mi placer,",
        "allana mi camino",
        "y me hace obedecer."
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Coro:",
        "Dios es amor,",
        "soy su pequeñuelo;",
        "quiero ser santo",
        "como es él.",
        "Es el amor divino",
        "mi gozo y mi placer,",
        "allana mi camino",
        "y me hace obedecer."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Del triste mundo lleno",
        "de muerte y dolor,",
        "quisiera yo llevar a Dios",
        "un pobre pecador."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Y cuando vaya al cielo",
        "con Cristo, mi Señor,",
        "allí por siempre cantaré",
        "de Dios y de su amor."
      ],
      "number": 4
    }
  ]
}