{
  "number": 488,
  "language": "es",
  "title": "Al andar con Jesús",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Al andar con Jesús"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Al andar con Jesús",
        "en su fúlgida luz,",
        "en mi senda su gloria veré;",
        "y su voz he de oír,",
        "pues promete vivir",
        "con aquel que obedece",
        "por fe."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Coro:",
        "Su santa Ley",
        "obedezco por fe,",
        "y feliz para siempre",
        "con Jesús estaré."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Si trabajo y penar",
        "tengo aquí que cargar,",
        "fortaleza en Jesús obtendré;",
        "pues alivia su amor",
        "mi afán, mi dolor,",
        "cuando ve que obedezco",
        "por fe."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Nunca pude saber",
        "de su amor el placer",
        "hasta que todo a Cristo",
        "entregué.",
        "Su bondad, su favor,",
        "su poder redentor",
        "goza aquel que obedece",
        "por fe."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Fiel amigo él es;",
        "sentareme a sus pies,",
        "y a su lado el camino andaré.",
        "Lo que él diga, haré,",
        "donde él quiera, iré,",
        "sin temor obedezco por fe."
      ],
      "number": 6
    }
  ]
}