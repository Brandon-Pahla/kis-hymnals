{
  "number": 85,
  "language": "es",
  "title": "Allá en el pesebre",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Allá en el pesebre"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Allá en el pesebre,",
        "sin cuna especial,",
        "Jesús tiernamente",
        "reposa en paz.",
        "Los astros nocturnos",
        "derraman su luz",
        "al rostro divino",
        "del niño Jesús."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "La vaca mugiendo",
        "despierta al bebé,",
        "mas este tranquilo,",
        "sonríe en solaz.",
        "Humildes pastores",
        "con gran emoción",
        "adoran al Niño",
        "que trae salvación."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Jesús, yo te amo;",
        "anhelo, Señor,",
        "andar en tus sendas,",
        "brindarte mi amor.",
        "El día se acerca",
        "en que te veré,",
        "y en tus mansiones",
        "feliz viviré."
      ],
      "number": 4
    }
  ]
}