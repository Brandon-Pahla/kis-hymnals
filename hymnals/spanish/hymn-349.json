{
  "number": 349,
  "language": "es",
  "title": "Gran gozo hay en mi alma hoy",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Gran gozo hay en mi alma hoy"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Gran gozo hay en mi alma hoy:",
        "Jesús conmigo está;",
        "markdowno con su amor estoy,",
        "su dulce paz me da."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Coro:",
        "Brilla el sol de Cristo en mi alma;",
        "cada día voy feliz así.",
        "Su faz sonriente al contemplar,",
        "¡cuánto gozo siento en mí!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "En mi alma hay melodías hoy,",
        "canciones a mi Rey.",
        "Feliz y libre en Cristo soy",
        "y salvo por la fe."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Paz plena tengo en mi alma hoy,",
        "pues Cristo me salvó.",
        "Mis hierros rotos quedan ya:",
        "Jesús me libertó."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "En mi alma hoy reina gratitud",
        "y loores a Jesús.",
        "En su presencia hay virtud,",
        "hay gozo en su luz."
      ],
      "number": 6
    }
  ]
}