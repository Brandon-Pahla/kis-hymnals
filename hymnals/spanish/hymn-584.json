{
  "number": 584,
  "language": "es",
  "title": "Amémonos, hermanos",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Amémonos, hermanos"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Amémonos, hermanos,",
        "con tierno y puro amor;",
        "pues somos la familia",
        "de nuestro Padre, Dios.",
        "Amémonos, hermanos,",
        "lo quiere el Salvador,",
        "que su preciosa sangre",
        "por todos derramó."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Amémonos, hermanos,",
        "en dulce comunión,",
        "y paz y afecto y gracia",
        "dará el Consolador.",
        "Amémonos, hermanos,",
        "y en nuestra santa unión",
        "no existan asperezas",
        "ni discordante voz."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Amémonos, hermanos,",
        "y al mundo pecador",
        "mostremos cómo viven",
        "los que salvados son.",
        "Amémonos, hermanos,",
        "de todo corazón;",
        "lo ordena Dios, el Padre:",
        "su Ley es ley de amor."
      ],
      "number": 4
    }
  ]
}