{
  "number": 495,
  "language": "es",
  "title": "Mi deber",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Mi deber"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Amar a alguien con más intenso",
        "amor,",
        "y hoy guiar al que errante va;",
        "orar con noble pensamiento a",
        "Dios",
        "y un dulce sonreír,",
        "hasta el atardecer,",
        "es mi deber."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Buscar verdad cual ciego busca",
        "luz;",
        "hacer mejor desde el amanecer;",
        "cuidar mi corazón para Jesús;",
        "y a su divina voz,",
        "si llama, responder,",
        "es mi deber."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Luego, al comparecer ante él allí,",
        "cuando acabada aquí mi obra",
        "esté,",
        "le rendiré homenaje a sus pies,",
        "dentro de la ciudad,",
        "donde él coronará",
        "mi gran deber."
      ],
      "number": 4
    }
  ]
}