{
  "number": 416,
  "language": "es",
  "title": "¡Oh!, tenga yo la ardiente fe",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### ¡Oh!, tenga yo la ardiente fe"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "¡Oh!, tenga yo la ardiente fe",
        "que ante enemigos mil",
        "no temblará ni aun cuando esté,",
        "ni aun cuando esté",
        "en la miseria vil,",
        "en la miseria vil."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Tal fe, que no se quejará",
        "ni bajo corrección,",
        "en hora amarga afirmará,",
        "afirmará",
        "en Dios el corazón,",
        "en Dios el corazón."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Refulge más si hay tempestad",
        "rugiendo en derredor,",
        "y cruzará la oscuridad,",
        "la oscuridad",
        "sin dudas ni temor,",
        "sin dudas ni temor."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Oh, dame a mí, Señor, tal fe,",
        "y, venga bien o mal,",
        "estando aquí gustar podré,",
        "gustar podré",
        "la dicha celestial,",
        "la dicha celestial."
      ],
      "number": 5
    }
  ]
}