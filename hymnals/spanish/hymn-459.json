{
  "number": 459,
  "language": "es",
  "title": "Háblame más de Cristo",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Háblame más de Cristo"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Quiero escuchar de aquel grande",
        "amor",
        "que en el Calvario Dios nos",
        "mostró;",
        "quiero escuchar del buen",
        "Salvador,",
        "¡háblame más de Cristo!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Coro:",
        "Quiero escuchar la historia fiel",
        "de mi Jesús, mi Salvador;",
        "quiero vivir tan solo por él,",
        "¡háblame más de Cristo!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Cuando me asalte la tentación",
        "y aviesas redes tienda a mi pie;",
        "quiero tener en él protección,",
        "¡háblame más de Cristo!"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Cuando en la lucha falte la fe",
        "y el alma sienta desfallecer;",
        "quiero saber que ayuda tendré,",
        "¡háblame más de Cristo!"
      ],
      "number": 5
    }
  ]
}