{
  "number": 257,
  "language": "es",
  "title": "¡Oh! ven, te invito, Cristo",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### ¡Oh! ven, te invito, Cristo"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Al venir al mundo dejaste atrás",
        "tu corona y majestad.",
        "Pero solo un pobre pesebre aquí",
        "te albergó aunque eras Rey."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Coro:",
        "[1-3]",
        "¡Oh! ven, te invito, Cristo,",
        "a morar en mi corazón.",
        "[4]",
        "¡Qué gozo tendré aquel día",
        "cuando vuelvas, Jesús, por mí!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Todo el cielo oyó el cántico sin par",
        "de los ángeles en Belén.",
        "Pero casi nadie te recibió,",
        "aunque eras el Salvador."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "En las cuevas duermen las zorras",
        "bien",
        "y las aves al nido van.",
        "Pero tú no hallaste do reposar,",
        "aunque eras el Creador."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Pronto la trompeta resonará,",
        "victorioso vendrás, Señor.",
        "Con alegre voz tú me llamarás",
        "a vivir siempre junto a ti."
      ],
      "number": 6
    }
  ]
}