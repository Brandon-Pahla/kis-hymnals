{
  "number": 199,
  "language": "ki",
  "title": "199. Riciiria No Rimwe (NZK 153)",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "1.",
        "Rĩciirĩa no rĩmwe,",
        "Ndĩ narĩo ngoro-inĩ,",
        "Nĩnguhĩrĩirie igũrũ",
        "Makĩria ya ira.",
        "Gũkuhĩ na gwitũ igũrũ,",
        "Gũkuhĩ na gwitũ rĩu,",
        "Nguonage hakuhĩ.",
        "2.",
        "Kuhĩrĩria gwitũ,",
        "Kuo kwĩna ciikaro,",
        "Gĩtĩ-inĩ kĩa Ngai Mũũmbi,",
        "Hakuhĩ na rũũĩ.",
        "3.",
        "Jesũ nyongerera,",
        "Wĩtĩkio wakwa;",
        "Na hĩndĩ ĩrĩa ngakinya kũu,",
        "Nguonage hakuhĩ."
      ],
      "number": 1
    }
  ]
}