{
  "number": 154,
  "language": "nd",
  "title": "154 Mlindi, Ngitshele",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "Mlindi ngitshele ngokusa,",
        "Ngobuhle beZioni",
        "Na ngeziboniso zAkhe,",
        "uMyeni ‘se sondele!",
        "Mhambi, Ye! suka",
        "Qaphela Ku yasa ukukhanya",
        "Yembatha ingubo yakho",
        "Se kuzokusa, vuka!"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Mlindi, bona imisebe,",
        "Ikhanya endleleni",
        "Iz’boniso wonk’ umhlaba",
        "Zi sh’ ilang’ elizayo",
        "Nxa kukhala icilongo,",
        "Li vus’ abasolwandle",
        "Abangcwel’ abafileyo",
        "Ba gqokisw’ ukungafi!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Ukukhanya ku yakhwela,",
        "Umnyaka weSabatha;",
        "Si yamemeza ngamazwi,",
        "Umbuso useduze;",
        "Mhambi, Ye! Ngi bona ngale",
        "Ubuhle beKhenani;",
        "Nomuzi nobuhle bawo!",
        "Nokuphakama kwawo"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "We’mlindi, uMnini-muzi",
        "NguMbusi was’eZioni;",
        "Ehlel’ es’hlalweni sAkhe,",
        "U busa yonk’ imoya;",
        "Emagqumen’ akhanyayo",
        "Anemiseve emihle;",
        "Nemithob’ empompozayo",
        "Nembal’ enhl’ osebeni!"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Mlindi izwe li seduze",
        "Nez’ thelo azipheli",
        "Ngale O, ku yathabisa!",
        "NeMbali yas’ Edeni;",
        "Lalela ba yahlabela,",
        "Ku yeza emoyeni",
        "Nez’ gidi ziyahlabela",
        "Masinya soba nazo"
      ],
      "number": 5
    }
  ]
}