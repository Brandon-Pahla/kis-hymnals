{
  "number": 262,
  "language": "nd",
  "title": "262 Ngenze Njani ngoKrestu",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "Ngizothini ngoJesu?",
        "Ophambi kwami",
        "Wembeth’ ingub’ ebomvu,",
        "Unamev’ ekhanda"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Manje yiw’ umbuzo, I yin’ impendulo?",
        "Ngizobethela uJesu, Ngiyek’ uBaraba!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Ngokhulula umphangi,",
        "Umunt’ ozidlayo!",
        "Nokuba uMsindisi?",
        "Yi’muph’ odelwayo?"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Lombuz’ uyesabeka,",
        "Ngonquma njani na?",
        "Umsa usangi linda,",
        "Usa thuthumela"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Ngizo nquma kanjani?,",
        "Noma ngithand’ izwe;",
        "Ngibethele uJesu,",
        "Kusind’ uBaraba?"
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Akuka khethwa soni;",
        "Nxa kubuzwa kanje!",
        "Nawe mKrestu omiyo,",
        "Kuwo amalingo"
      ],
      "number": 6
    },
    {
      "type": "verse",
      "lines": [
        "Manje yiw’ umbuzo, I yin’ impendulo?",
        "Ngizobethel’ uBaraba, Ngikhulul’ uJesu"
      ],
      "number": 7
    }
  ]
}