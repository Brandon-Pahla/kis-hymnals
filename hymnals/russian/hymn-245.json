  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Мы - верные слуги Христовы"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Мы - верные слуги Христовы,",
        "Мы призваны Богу служить:",
        "Греховные сбросить оковы",
        "И в мире спасёнными жить."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Мы призваны Богом,",
        "Чтоб в мире греховном светить,",
        "Бороться с пороком",
        "И ближним к спасенью служить."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Бороться с пороком и злобой,",
        "В терпенье любовь показать",
        "И в жизни земной и суровой",
        "Всегда на Творца уповать."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Мы призваны Богом,",
        "Чтоб в мире греховном светить,",
        "Бороться с пороком",
        "И ближним к спасенью служить."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Мы призваны узкой тропою,",
        "Тропой испытаний идти",
        "И светом Христовым собою",
        "Светить погибавшим в пути."
      ],
      "number": 6
    },
