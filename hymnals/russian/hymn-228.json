  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Ласково, нежно Спаситель взывает"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Ласково, нежно Спаситель взывает,",
        "Ждёт и тебя, и меня,",
        "В горе, в заботах всегда утешает,",
        "Любит тебя и меня."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Приди домой, домой!",
        "Грешник заблудший, приди, приди!",
        "Слышишь, как ныне",
        "Спаситель взывает:",
        "О утомлённый, приди!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Слышишь ли голос заботливый, нежный?",
        "Ныне тебя он зовёт;",
        "Всем изнемогшим, заблудшим и грешным",
        "Он утешенье даёт."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Приди домой, домой!",
        "Грешник заблудший, приди, приди!",
        "Слышишь, как ныне",
        "Спаситель взывает:",
        "О утомлённый, приди!"
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Он нас омыл драгоценною Кровью,",
        "Он нам даёт благодать;",
        "С нежной, глубокой и вечной любовью",
        "Хочет тебя Он принять!"
      ],
