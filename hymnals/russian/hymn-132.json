  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Наполняет сердце радость"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Наполняет сердце радость,",
        "И хвалу поют уста,",
        "Когда вижу я сквозь дымку",
        "Голубые небеса."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "В день субботний, в день отрадный",
        "Отступает суета,",
        "И покой небесный сходит",
        "На уставшие сердца."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Когда слышу птичек пенье,",
        "Когда вижу солнца луч,",
        "Исчезают все волненья -",
        "О, как мой Господь могуч!"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "В день субботний, в день отрадный",
        "Отступает суета,",
        "И покой небесный сходит",
        "На уставшие сердца."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Будем славить в песнопеньях",
        "Мудрость нашего Творца,",
        "Вознесём к Нему в молитвах",
        "Благодарные сердца!"
      ],
      "number": 6
    },
    {
