{
  "number": 265,
  "language": "ru",
  "title": "Вперёд, Божий раб",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Вперёд, Божий раб"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Вперёд, Божий раб, трудись на земле,",
        "Свой путь совершай до конца,",
        "Сам Господь охранять поручает тебе",
        "Знамя истины и добра."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Там во славе Отца",
        "В обителях светлых Христа",
        "Будем мы тогда,",
        "Там будем мы навсегда."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Будь твёрд, Божий раб, борись за Христа,",
        "Спасения шлем возложи,",
        "Меч духовный пусть будет с тобою всегда,",
        "С ним ты в битву смелей иди."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Там во славе Отца",
        "В обителях светлых Христа",
        "Будем мы тогда,",
        "Там будем мы навсегда."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Смелей, Божий раб, борись до конца,",
        "Победа уж ждёт впереди,",
        "Хор небесный нас встретить готов у Отца,",
        "От печалей, невзгод вдали."
      ],
      "number": 6
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Там во славе Отца",
        "В обителях светлых Христа",
        "Будем мы тогда,",
        "Там будем мы навсегда!"
      ],
      "number": 7
    }
  ]
}