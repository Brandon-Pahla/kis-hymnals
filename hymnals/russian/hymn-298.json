{
  "number": 298,
  "language": "ru",
  "title": "В день сей воспеваем",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### В день сей воспеваем"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "В день сей воспеваем",
        "Дар любви святой,",
        "Вместе вспоминаем",
        "Вечный подвиг Твой.",
        "Душу раскрываем",
        "Истине святой,",
        "Сердце изливаем,",
        "Боже, пред Тобой."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Очи поднимаем",
        "К небу в этот час.",
        "Сердцем ожидаем -",
        "О, призри на нас!",
        "Мы ослабеваем,",
        "Тяжко нам подчас -",
        "Боже, умоляем,",
        "Оживи Ты нас."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Вечерю святую",
        "С нами раздели,",
        "Верой и любовью",
        "Всех нас надели.",
        "Тайный дух гордыни,",
        "Боже, удали,",
        "Дай нам быть отныне",
        "Светочем земли."
      ],
      "number": 4
    }
  ]
}