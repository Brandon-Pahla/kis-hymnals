{
  "number": 326,
  "language": "ru",
  "title": "Шалом, о друзья",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Шалом, о друзья"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Шалом, о друзья!",
        "Шалом, о друзья!",
        "Шалом, шалом!",
        "Мир Божий в пути",
        "Пусть всех охранит -",
        "Шалом, шалом."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Пусть милость Творца",
        "Согреет сердца -",
        "Шалом, шалом!",
        "Пусть ангелы вас",
        "Хранят в трудный час -",
        "Шалом, шалом."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "До встречи, друзья!",
        "До встречи, друзья!",
        "Шалом, шалом!",
        "Пусть Вечный Господь",
        "Свой мир ниспошлёт -",
        "Шалом, шалом!"
      ],
      "number": 4
    }
  ]
}