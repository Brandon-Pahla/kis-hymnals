  "title": "Взгляните, как сегодня",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Взгляните, как сегодня"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Взгляните, как сегодня",
        "Ликуют небеса",
        "И славит в день субботний",
        "Творение Творца."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Святой день помни, свято чти",
        "В смиренье сердца, от души.",
        "Свято чти, свято чти",
        "В смиренье, от души."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Там, где Закон небесный",
        "Творить спешит народ,",
        "Там мир, покой чудесный",
        "Субботний день несёт."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Святой день помни, свято чти",
        "В смиренье сердца, от души.",
        "Свято чти, свято чти",
        "В смиренье, от души."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "И если здесь, в сей жизни,",
        "Так чуден день святой -",
        "Что ж будет там, в отчизне,",
        "Когда войдём в покой!"
      ],
      "number": 6
    },
    {
      "type": "verse",
      "lines": [
        "Припев:",
        "Святой день помни, свято чти",
        "В смиренье сердца, от души.",
        "Свято чти, свято чти",
        "В смиренье, от души."
      ],
      "number": 7
    }
  ]
}