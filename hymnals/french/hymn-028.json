{
  "number": 28,
  "language": "fr",
  "title": "D’un coeur joyeux",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "D’un coeur joyeux, chantez!",
        "Un fils nous est donné :",
        "Il est l’Admirable,",
        "Né dans la pauvreté,",
        "Trésor incomparable,",
        "Salut immérité!"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Refrain",
        "Gloire au Dieu très-haut!",
        "Gloire au Dieu très-haut!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Bergers soyez heureux,",
        "Devant le fils de Dieu!",
        "Il vient sur la terre :",
        "Il veut nous délivrer.",
        "Devant ce grand mystère,",
        "Venez pour adorer!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Ô mages d’Orient,",
        "Guidés divinement",
        "Sous l’étoile ardente,",
        "Voyez l’enfant qui dort!",
        "Il comble votre attente :",
        "Offrez-lui vos trésors!"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Lumière et vérité.",
        "Vivante charité,",
        "Clair soleil du monde,",
        "Jésus, soit exalté!",
        "Par toi la grâce abonde",
        "Sur notre humanité."
      ],
      "number": 5
    }
  ]
}