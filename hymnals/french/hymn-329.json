{
  "number": 329,
  "language": "fr",
  "title": "Jésus, doux Maître",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "Jésus, doux Maître,",
        "Règne sur moi,",
        "Soumets mon être,",
        "Sois-en le roi.",
        "Je suis l'argile,",
        "Toi le potier,",
        "Rends-moi docile,",
        "Ton prisonnier."
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Jésus, lumière,",
        "Pénètre en moi,",
        "Éprouve, éclaire",
        "Ma faible foi.",
        "Plus blanc que neige",
        "Rends-moi Seigneur,",
        "Et de tout piège,",
        "Garde mon cœur."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Ô Jésus, source",
        "De guérison,",
        "Sois dans ma course,",
        "Santé, pardon.",
        "Par ta puissance,",
        "Viens, soutiens-moi;",
        "Par ta présence,",
        "Révèle-toi."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Je m'abandonne,",
        "Jésus à toi,",
        "Détruis, pardonne",
        "Tout mal en moi.",
        "Remplis mon âme",
        "De ton Esprit,",
        "Et qu'il m'enflamme,",
        "Et jour et nuit !"
      ],
      "number": 4
    }
  ]
}