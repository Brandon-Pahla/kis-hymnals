{
  "number": 237,
  "language": "fr",
  "title": "Mon âme en silence",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "Mon âme en silence",
        "Se tient devant toi,",
        "Oh! rends ta présence",
        "Sensible à ma foi."
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Je ne veux connaître",
        "Aucune autre voix",
        "Que la tienne, ô Maître,",
        "Toi seul, parle-moi!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Parole bénie",
        "De mon Rédempteur,",
        "Parole de vie,",
        "Pénètre en mon coeur."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "C'est toi la lumière",
        "Qui brille en la nuit,",
        "L'eau qui désaltère,",
        "Le pain qui nourrit."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Seigneur, je t'écoute,",
        "Seigneur, parle-moi!",
        "Sans crainte, ni doute,",
        "Je m'attends à toi."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Qu'en moi, ta voix fasse",
        "Abonder toujours",
        "Les fruits de la grâce,",
        "Les fruits de l'amour."
      ],
      "number": 6
    }
  ]
}