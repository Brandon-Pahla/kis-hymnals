  "number": 4,
  "language": "rn",
  "title": "  4 ",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 4 Hariho Amakuru Meza"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Harih'amakuru mez’amenyeshw’ ingenzi,",
        "ziyerera kure y'i wabo.",
        "Yuk'Umukiza Yes’agiye kugaruka,",
        "Aje kwimik'Ingoma yiwe."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Icitabirizo:",
        "Azoza, ndabizi kw'azogaruka,",
        "Nzi neza kw‘azogaruka.",
        "Izo ngenzi zose zirushe",
        "Zizoruhuk'Umukiz’agarutse."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Imva z’abasinziriye mu Mwami kera,",
        "Zose zica zuguruka",
        "Kand’isinzi ry'abasinziriy'i kuzimu,",
        "Bazosubira kuba kw'isi;"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Mur'iyo si nziza ntituzotandukana.",
        "Tuzoririmb’uko twakize.",
        "Abacunguwe bazoba bavuye hose",
        "Baseng'Umwami wo mw’ijuru."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Haleluy’Amina, ni tumushemagize.",
        "Ni twizera tuzobanayo,",
        "Ba maso, nezerwa,",
        "uhor'umwiringiye,",
        "Uzambar'urugori rwiza."
      ],
      "number": 6
    }
  ]
}