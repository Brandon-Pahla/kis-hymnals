  "number": 63,
  "language": "bem",
  "title": "63 - CINSHI CINGASAMBA INE?",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "WHAT CAN WASH AWAY MY SIN?"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "1. Cinshi cingasamba 'ne?",
        "Umulopa wakwa Yesu",
        "Mutima wasambwa nshi?",
        "Umulopa wakwa Yesu.",
        "CHORUS:",
        "Mulopa usuma, Ukasamba ine;",
        "Nshikwete nacimbi, Umulopa wakwe weka,",
        "2. Ukusamba ndemona,",
        "Umulopa wakwa Yesu;",
        "Ukumbelela ine,",
        "Umulopa wakwa Yesu.",
        "3. Ukumfumya mu fibi,",
        "Umulopa wakwa Yesu;",
        "Fintu fyandi fifyafye,",
        "Ndefwaya mulopa wakwe.",
        "4. Ndesumina muli'yu,",
        "Umulopa wakwa Yesu;",
        "Busuma bwandi ubu,",
        "Umulopa wakwa Yesu.",
        "5. Lumbeni mulu uyu,",
        "Wangafwa mulopa wakwe;",
        "Natasha kuli uyu,",
        "Umulopa wakwa Yesu."
      ],
      "number": 2
    }
  ]
}