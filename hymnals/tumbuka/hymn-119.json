  "number": 119,
  "language": "tum",
  "title": " 119 Nkhuwona Ndopa Za Yesu",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 119 Nkhuwona Ndopa Za Yesu",
        "THE CLEANSING WAVE"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "1.",
        "Nkhuwona ndopa za Yesu,",
        "chisimi chikuru,",
        "Mponoski wakurongora",
        "umo wakamlasa."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Refrain:",
        "Nkhuwona ndopa za Yesu,",
        "NkhubiLamo zikutozga,",
        "Nkhuwonga zikundisuka,",
        "Kundisuka ndituwe tu!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "2.",
        "Ndine chilengiwa chiphya,",
        "chakale chamala,",
        "Kwananga kwane kwamala,",
        "ndasamba mundopa."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "3.",
        "Nkhwenda m'ungweru wa Fumu,",
        "ndatonda kwananga,",
        "Mtima, chivwalo vyatowa,",
        "na Khristu mwa ine."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "4.",
        "Uchizi wakuzizwiska",
        "kusamba mu ndopa,",
        "Ndi Yesu pera",
        "ndim' manye, wakapayikika."
      ],
      "number": 6
    }
  ]
}