{
  "number": 82,
  "language": "tum",
  "title": " 82 Fumu Mpulike",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 82 Fumu Mpulike",
        "LORD, IN THE MORNING"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "1.",
        "Fumu mpulike nkhuromba na mulenjilenji,",
        "Ndilawiskenge kwa imwe pakumurombani,"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "2.",
        "Mzimu mundirongozgenge m'nthowa za ulunji,",
        "M'ndiwezgeko kukusovya na milimo yane."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "3.",
        "Awo wakutemwa Yesu, mbakukondwa nadi",
        "Fumu yitiwabisenge, m'nyengo ya visuzgo."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "4.",
        "Uko wali kuya Khristu, wakuweyerera",
        "Pa chizumbe cha Wadada, sumu na marumbo."
      ],
      "number": 5
    }
  ]
}