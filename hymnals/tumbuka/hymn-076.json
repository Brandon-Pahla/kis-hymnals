{
  "number": 76,
  "language": "tum",
  "title": " 76 Nkhusangwa Kuphara",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 76 Nkhusangwa Kuphara",
        "I LOVE TO TELL THE STORY"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "1.",
        "Cheruzgo chamba kale kuchanya,",
        "na mabuku ghakujulika,",
        "Ndipo Fumu yamkweruzga",
        "milimo yose tikuchita."
      ],
      "number": 2
    },
    {
      "type": "chorus",
      "lines": [
        "Kasi tamkwima wuLi'se,",
        "pazuwa Lira Lakofya?",
        "Kasi tamfika kwa iyo,",
        "zakwananga nzakusukika?"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "2.",
        "Nkhusangwa pakuphara, vyakuzizwiska 'mwe,",
        "Makani ghakuruska ghose pano pasi,",
        "Nkhukondwa kupharaso ghandovwire ine,",
        "Ndimo nkhutamikira chitemwa cha Fumu."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "3.",
        "Nkhusangwa pakuphara mazgu ghakunozga,",
        "Para nkhughapulika ghakundikondweska,",
        "Na wambura kumanya wose wapulike,",
        "Chiponosko cha Yesu Fumu yakutemwa."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "4.",
        "Nkhusangwa pakuphara vya mponoski wane,",
        "Wakafuma kuchanya wakiza mucharu,",
        "Wakafwa pamphinjika, wakawuka ndipo,",
        "Nakakwera kuchanya, wati wizengeso."
      ],
      "number": 5
    }
  ]
}