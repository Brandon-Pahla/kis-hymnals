{
  "number": 156,
  "language": "pt",
  "title": "Vem, Espírito Divino",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Vem, Espírito Divino"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Vem, Espírito divino,",
        "Ao meu pobre coração.",
        "Sê em mim presente sempre,",
        "Faz em mim habitação."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Vem, ó, vem! Sim, vem já!",
        "Vem, ó, vem, Consolador",
        "Enche-me com Tua presença,",
        "E renova meu fervor"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Eu sou fraco, muito fraco;",
        "Aos Teus pés eu venho assim.",
        "Ó Espírito divino,",
        "Vem, ó, vem e habita em mim."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Limpa, salva, toma puro",
        "Este rude coração.",
        "Visto que és consolo e vida,",
        "Faz em mim habitação."
      ],
      "number": 5
    }
  ]
}