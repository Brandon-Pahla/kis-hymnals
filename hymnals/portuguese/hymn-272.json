{
  "number": 272,
  "language": "pt",
  "title": "Olha com Fé Para Cima",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Olha com Fé Para Cima"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Quando te vêm tristezas,",
        "Dores ao coração,",
        "Olha com fé pra cima,",
        "Deus dá consolação!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Sempre! Sempre!",
        "Olha com fé para cima,",
        "Onde Jesus resplandece a luz!",
        "Olha com fé para cima!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Quando os amigos fogem,",
        "Quando te encontras só,",
        "Olha com fé pra cima,",
        "Cristo de ti tem dó."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Tens uma dor secreta",
        "Que ninguém pode cer?",
        "Olha com fé pra cima,",
        "Alívio hás de ter."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Não andes cabisbaixo,",
        "Pra mais te entristecer;",
        "Olha com fé pra cima,",
        "Procura a Cristo ver."
      ],
      "number": 6
    }
  ]
}