{
  "number": 533,
  "language": "pt",
  "title": "Cristo Salva",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Cristo Salva"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Ó, vinde, vós aflitos, já",
        "Ao trono do Senhor;",
        "Abrigo Cristo vos dará,",
        "Refúgio em Seu amor."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Cristo salva, Cristo salva,",
        "Salva o pecador!",
        "Cristo salva, Cristo salva,",
        "Por Seu grande amor!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Seu sangue derramou por nós,",
        "E assim nos veio abrir",
        "Estrada reta que conduz",
        "Ao Céu, o bom porvir."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Jesus é vida, paz e luz,",
        "Do mundo o Redentor;",
        "E tudo, enfim, Jesus concede",
        "Ao pobre pecador."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Ó, vinde, pois, ó, vinde já",
        "A Cristo vos unir!",
        "Perdão Jesus concederá",
        "A quem a luz seguir."
      ],
      "number": 6
    }
  ]
}