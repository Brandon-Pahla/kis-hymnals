{
  "number": 290,
  "language": "pt",
  "title": "Jesus, Sempre Te Amo",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Jesus, Sempre Te Amo"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Jesus sempre Te amo,",
        "Porque sei que és meu;",
        "A Ti toda glória,",
        "Na Terra e no céu!",
        "Meu Mestre divino,",
        "Meu Deus e meu Rei,",
        "A Ti, ó meu Cristo,",
        "Submisso serei."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Eu Te amo porque",
        "Tu morreste por mim;",
        "Eu Te amo porque",
        "Teu amor não tem fim.",
        "Em Ti confiança",
        "Pra sempre terei;",
        "A Ti, ó meu Cristo,",
        "Submisso serei."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Eu Te amo, Meu Mestre,",
        "Enquanto viver.",
        "Eu hei de louvar-Te",
        "Com grande prazer.",
        "Agora e pra sempre",
        "Contigo estarei;",
        "A Ti, ó meu Cristo,",
        "Submisso serei."
      ],
      "number": 4
    }
  ]
}