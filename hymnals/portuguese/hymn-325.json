{
  "number": 325,
  "language": "pt",
  "title": "As Novas do Evangelho",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### As Novas do Evangelho"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "As novas do evangelho",
        "Ressoando estão aqui;",
        "Boas novas tão alegres!",
        "Elas são pra mim e ti.",
        "Assim Deus nos amou,",
        "Sim, a cada pecador,",
        "Que nos deu Seu Filho amado",
        "Pra sofrer a nossa dor."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "\"Santa paz e perdão!\"",
        "São as novas lá dos Céus!",
        "\"Santa paz e perdão!\"",
        "Demos glória ao nosso Deus!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "As novas do evangelho,",
        "Anunciam vida e paz,",
        "Pois Jesus aos pecadores",
        "Salvação perene traz.",
        "É tempo de aceitar",
        "O glorioso Salvador,",
        "Poderoso e mui bondoso,",
        "Que perdoa o pecador."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "As novas do evangelho",
        "Levam todos a saber",
        "Que perdão e vida eterna",
        "Todos podem receber.",
        "É só crer em Jesus",
        "E confiar em Seu amor,",
        "Pois na cruz verteu Seu sangue",
        "Para ser o Salvador."
      ],
      "number": 5
    }
  ]
}