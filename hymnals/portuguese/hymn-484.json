{
  "number": 484,
  "language": "pt",
  "title": "Faze Como Daniel",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Faze Como Daniel"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Meu irmão intenta ser",
        "Tal qual Daniel,",
        "Resoluto em combater",
        "O usurpador cruel?"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Faze como Daniel,",
        "Serve o eterno Deus.",
        "Entre os infiéis, fiel,",
        "Marcha para os Céus."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Em coragem singular,",
        "Firme em prol do Rei",
        "Sempre ousado em proclamar",
        "Jesus e Sua lei."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Não se turbe o coração,",
        "Deixa a timidez.",
        "Muitos males cairão",
        "Perante a intrepidez."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Para o crente no Senhor,",
        "Há nas trevas luz;",
        "Ele avança sem temor,",
        "Em nome de Jesus"
      ],
      "number": 6
    }
  ]
}