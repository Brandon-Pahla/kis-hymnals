{
  "number": 463,
  "language": "pt",
  "title": "Brilhando, Brilhando!",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Brilhando, Brilhando!"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Vejo no céu resplendente,",
        "Do sol a clara luz;",
        "Quero viver tão somente",
        "Brilhando por Jesus."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Brilhando, brilhando,",
        "Quero brilhar como a luz!",
        "Brilhando, brilhando,",
        "Sempre brilhar por Jesus!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Eu quero em tudo exaltá-Lo",
        "Na escola e no estudar;",
        "Nunca também olvidá-Lo",
        "Em casa e no brincar."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Com um viver diligente,",
        "Assim me quer Jesus;",
        "Sempre com rosto markdowne,",
        "Brilhando como a luz."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Se esta é Sua vontade,",
        "Brilhando viverei,",
        "E pela Sua bondade,",
        "Ao lindo Céu irei."
      ],
      "number": 6
    }
  ]
}