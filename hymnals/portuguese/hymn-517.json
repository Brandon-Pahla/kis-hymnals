{
  "number": 517,
  "language": "pt",
  "title": "Volto ao Lar",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Volto ao Lar"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Bem longe do Senhor vaguei,",
        "Volto agora ao lar.",
        "Veredas más eu já trilhei;",
        "Ó Deus, volto ao lar."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Volto ao lar, volto ao lar,",
        "Não há mais vagar.",
        "Abre, ó Pai, os braços Teus;",
        "Volto ao lar, meu Deus."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Meu tempo em vão desperdicei,",
        "Volto agora ao lar.",
        "Lamento haver ferido a lei;",
        "Ó Deus, volto ao lar."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Já farto estou do mal, da dor,",
        "Volto agora ao lar.",
        "Confio em Ti, em Teu amor;",
        "Ó Deus, volto ao lar."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "O teu perdão me é mister,",
        "Volto agora ao lar.",
        "Bem puro e limpo faz-me ser;",
        "Ó Deus, volto ao lar."
      ],
      "number": 6
    }
  ]
}