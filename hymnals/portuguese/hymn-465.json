{
  "number": 465,
  "language": "pt",
  "title": "Brilhemos por Jesus",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Brilhemos por Jesus"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Deus dá às criancinhas,",
        "Por onde Ele as conduz,",
        "O encargo tão glorioso:",
        "Brilhar por seus Jesus.",
        "Sejamos belos raios",
        "Da luz do Deus de amor,",
        "Pra dissipar as trevas",
        "Dispersas ao redor."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Pequenos raios somos",
        "Da verdadeira luz;",
        "Em todos os lugares,",
        "Brilhemos por Jesus."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "As nuvens tão escuras",
        "Escondem nossa luz;",
        "A vida tem tristezas,",
        "Pesada é nossa cruz.",
        "Mas, como belos raios,",
        "Cumpramos a missão",
        "De dar sempre alegria",
        "A cada coração."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Que grande privilégio:",
        "Brilhar, sim, por Jesus!",
        "E desfazer as trevas",
        "Pra dar lugar à luz!",
        "Com pensamentos puros,",
        "Vivamos com amor;",
        "Sejamos raiozinhos",
        "Que brilhem sem temor."
      ],
      "number": 5
    }
  ]
}