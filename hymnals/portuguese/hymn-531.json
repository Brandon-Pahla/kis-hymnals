{
  "number": 531,
  "language": "pt",
  "title": "Do Santo Sábado Es Senhor",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Do Santo Sábado Es Senhor"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Horas benditas,",
        "Santas e felizes,",
        "São as que passo",
        "Junto a Ti, meu Deus."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Ó Mestre amado,",
        "Criador divino,",
        "Do santo sábado,",
        "Tu és Senhor"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Busco Tua face",
        "De manhã bem cedo,",
        "Pois Tuas bênçãos",
        "Quero receber."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "E logo à tarde,",
        "Quando o Sol se esconde,",
        "Quero, prostrado,",
        "Aos Teus pés estar."
      ],
      "number": 5
    }
  ]
}