{
  "number": 393,
  "language": "pt",
  "title": "Sentado às Ribas d'Água Viva",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Sentado às Ribas d'Água Viva"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Sentado às ribas d'água viva,",
        "Que corre salutar,",
        "Sequioso busco haurir a vida",
        "Que dela sei manar."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Sentado às ribas d'água viva,",
        "Santas ribas d'água viva,",
        "Quero haurir divina vida,",
        "Quero a sede mitigar."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Cansado da penosa lida,",
        "Anseio repousar,",
        "E nessa fonte d'água viva",
        "Minh'alma restaurar."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Ó, vem provar dessa água viva",
        "Que Cristo quer te dar.",
        "É água que renova a vida",
        "E a sede faz cessar."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "O que beber dessa água viva",
        "De novo nascerá,",
        "E, lá no Céu, do rio da vida",
        "Um dia beberá."
      ],
      "number": 6
    }
  ]
}