{
  "number": 55,
  "language": "pt",
  "title": "Cantarei a Linda História",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Cantarei a Linda História"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Cantarei a linda história",
        "De Jesus, o Salvador",
        "Que deixou Seu lar na glória",
        "Pra salvar o pecador."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Cantarei a linda história",
        "De Jesus e Seu amor;",
        "Com fervor, na Sua glória,",
        "Louvarei ao Salvador"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Eu andei, do lar, distante,",
        "Prestes já a perecer,",
        "Mas Jesus, entăo, buscou-me",
        "E salvou meu pobre ser."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Muitas vezes dias tristes",
        "E afliçőes me sobrevęm,",
        "Mas Jesus depressa estende",
        "Sua măo que me sustém."
      ],
      "number": 5
    }
  ]
}