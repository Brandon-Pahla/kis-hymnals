{
  "number": 17,
  "language": "pt",
  "title": "Nós Te Adoramos",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Nós Te Adoramos"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Nós Te adoramos, Deus infinito,",
        "E a Teu Filho, Rei, Salvador;",
        "Teu nome e terno é sempre bendito;",
        "Teu Espírito traz-nos amor.",
        "Glória rendemos, honra, louvor,",
        "E adoraçăo a Ti, ó Senhor!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Éramos presos pelo pecado,",
        "Tu nos livras-te dessa prisăo;",
        "E por Teu Filho imaculado,",
        "Ofertaste-nos a salvaçăo.",
        "Glória rendemos, honra, louvor,",
        "E adoraçăo a Ti, Redentor!"
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Tu nos convences dos vis pecados,",
        "E da justiça, luzes nos dás,",
        "E ŕ verdade somos guiados,",
        "Ó Espírito Santo de paz.",
        "Glória rendemos, honra, louvor,",
        "E adoraçăo, ó consolador!"
      ],
      "number": 4
    }
  ]
}