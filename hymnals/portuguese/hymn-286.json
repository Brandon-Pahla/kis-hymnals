{
  "number": 286,
  "language": "pt",
  "title": "Pai, Eu me Achego a Ti",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Pai, Eu me Achego a Ti"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Pai, eu me achego a Ti,",
        "Pois Tua voz ouvi;",
        "Teu grande amor senti,",
        "Ó meu Senhor!",
        "Não poderei viver,",
        "Só, sem o Teu poder.",
        "Vem inundar meu ser",
        "Com Teu amor!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Pai, eu me achego a Ti,",
        "Sou pecador;",
        "Que me conforte aqui",
        "Teu santo amor."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Pai, quão distante andei,",
        "Só, quebrantando a lei,",
        "Sem Tua luz, bem sei,",
        "Sem salvação.",
        "Sou pecador e vil,",
        "Sim, com defeitos mil.",
        "Ó dá-me em Teu redil",
        "Paz e perdão!"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Teu quero ser, Senhor,",
        "Ser luz por onde for,",
        "Que eu tenha mais fervor,",
        "Mais mansidão.",
        "Em minha vida, ó Deus,",
        "Pões os caminhos Teus.",
        "Vem, vem guiar-me aos céus",
        "Com tua mão!"
      ],
      "number": 5
    }
  ]
}