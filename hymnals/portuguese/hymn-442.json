{
  "number": 442,
  "language": "pt",
  "title": "Tão Grato me é Lembrar",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Tão Grato me é Lembrar"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Tão grato me é lembrar",
        "Que cada dia estou",
        "Mais perto do celeste lar,",
        "Em que morar eu vou!"
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Cada vez mais",
        "Perto do lar,",
        "Perto do meu eterno lar",
        "Em que morar eu vou."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Em breve vou partir",
        "Para onde não há dor.",
        "Eterna vida vou fruir",
        "Naquele lar de amor."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Ó Mestre, que leal",
        "Eu seja sempre aqui,",
        "Pois quero junto aos salvos mil,",
        "Contigo estar aí."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Oh! quando ali chegar,",
        "Que dia tão feliz!",
        "Descanso e paz irei gozar",
        "Naquele bom país."
      ],
      "number": 6
    }
  ]
}