{
  "number": 37,
  "language": "pt",
  "title": "Tudo Que Há em Terra e Mar",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Tudo Que Há em Terra e Mar"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Tudo que há em terra e mar;",
        "Belezas que há no céu;",
        "Tudo que o bom Deus criou",
        "Traz honra ao nome Seu."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "A linda flor se abrindo,",
        "E o canto do pardal,",
        "De Deus o amor revelam,",
        "Com graça divinal."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Florestas e montanhas,",
        "O rio a correr;",
        "O pôr-de-sol tão lindo,",
        "Deus fez com Seu poder."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Deu olhos para vermos,",
        "E lábios pra cantar;",
        "O Seu amor infindo,",
        "Oh, vamos proclamar!"
      ],
      "number": 5
    }
  ]
}