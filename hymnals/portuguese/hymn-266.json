{
  "number": 266,
  "language": "pt",
  "title": "Conformação",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### Conformação"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Prova severa e mui real",
        "Sofres, em aflição,",
        "Mas podes ter conforto e paz",
        "Na conformação."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Côro:",
        ":",
        "Conformação,",
        "Eis o caminho bom;",
        "Busca, pois, este excelso dom,",
        "A conformação."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Quando tentado para o mal,",
        "Recorre à oração;",
        "Vais ter vitória no final,",
        "Na conformação."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Vai tudo mal ao teu redor,",
        "É tudo turbação?",
        "Vais ter mais força e mais vigor",
        "Na conformação."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Quando ofendido por alguém,",
        "Não negues teu perdão;",
        "Ora a Jesus e busca o bem",
        "Na conformação."
      ],
      "number": 6
    }
  ]
}