{
  "number": 584,
  "language": "tw",
  "title": "Honhom Bi Wɔ Ewim a",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "Honhom bi wɔ ewim a",
        "Ͻse Kristofo ny'naa sɛ",
        "\\\"Monkamfo Kristo dɔ a",
        "Edi dwuma wiase no\\\"."
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Gyae fɛre, ma wo nne so;",
        "Ka nea Nyame ayɛ ky'rɛ:",
        "Nyame aba wɔ Kistom',",
        "Yehu Ne tumi no nnɛ."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Sɛ 'gyidifo kyɛ paanoo,",
        "Ma mmofra didi mee a,",
        "Monkamfo Kristo dɔ a",
        "Edi dwuma wiase no."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Ne Honhom di ɔko no",
        "Anim siesie mfomso ny'naa",
        "Nyame aba wɔ Kristom'",
        "Yehu Ne tumi no nnɛ."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Sɛ 'hɔho nyɛ ankonam,",
        "Na 'dedamfikyi nya fič a,",
        "Monkamfo Kristo dɔ a",
        "Edi dwuma wiase no."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "Ne Honhom no nhyɛ yɛn ma",
        "Na ɔnky'rɛ yɛn adwen kwan;",
        "Nyame aba wɔ Kristom'",
        "Yehu Ne tumi no nnɛ."
      ],
      "number": 6
    },
    {
      "type": "verse",
      "lines": [
        "Honhom bi wɔ ewim a",
        "Ͻrefrɛ akra mmaa ny'naa,",
        "Monkamfo Kristo dɔ a",
        "Edi dwuma wiase no."
      ],
      "number": 7
    }
  ]
}