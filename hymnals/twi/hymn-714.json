{
  "number": 714,
  "language": "tw",
  "title": "N19 Lord Thy Word Abideth",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "‘W'rade, W'asɔm tim hɔ,",
        "Ɔkyerɔ yɔn nanɔkwan;",
        "Nea ɔgye asɔmpan';",
        "Nya hann ne anigye."
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "Sɔ ‘atamfo bɔn a,",
        "W'asɔm no hyɔ yɔn den;",
        "Awerɔkyekyesɔm",
        "N-kwagye nkrasɔm no."
      ],
      "number": 2
    },
    {
      "type": "verse",
      "lines": [
        "Ahum tu fa yɔn so,",
        "Mununkum siw kwan a,",
        "Ne hann kyerɔ yɔn kwan,",
        "Ɔhwɔ yɔn kwan so yie."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "Hena n'otum' ka dɔw",
        "Ne ademude a",
        "Komam' hobrɔasefo",
        "Nya fi W'asɔm mu no?"
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "Mmɔbrɔhun' asεm a",
        "Ɔboa ateasefo;",
        "Nkwasɔm a ɔma nea",
        "Ɔrewu w'rɔ kyekye."
      ],
      "number": 5
    },
    {
      "type": "verse",
      "lines": [
        "O anka yɔn nso nhu",
        "N'adesua kronkron no,",
        "Nnɔ Wo, nsùro Wo, ‘Wura,",
        "Na yentwiw mmɔn Wo daa."
      ],
      "number": 6
    }
  ]
}