  "title": "152: KOITA MUYA WANGU",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "CS 554152KOITA MUYA WANGU",
        "SPEAK TO MY SOUL",
        "Doh is Eb",
        "1",
        "Koita muya wangu Jesu mujwi ndimvwe;",
        "Aluyando lubotu ndikale andiwe,",
        "Kojula moyo wangu ndimvwe ijwi lyako;",
        "Kozuzya muya wangu ndibe mwana wako",
        "CIINDULULO:",
        "Kopetekezya Mwami waka ndiyandisya,",
        "Uya kuba mukomi uya kwaanguluka,",
        "Kondiita O Mwami mu luyando lwako,",
        "Ndimvwe kuita kwako, Ndikale andiwe.",
        "2",
        "Koita bana bako ba ende mu muya,",
        "Bazuzye kukomana, Baisye kukomba,",
        "Mukulipa kwa myoyo babe muli ndiwe,",
        "Kofwamba kuseluka tula kulindila.",
        "3",
        "Mbuli kale kondiita, Mu luyando lwako,",
        "Ndizibe cakucita, Ndibambe mulawo,",
        "Ndisololele Mwami, Ndikulemekezye,",
        "Ndicite luse lwako, Nendili munyika."
      ],
      "number": 1
    }
  ]
}