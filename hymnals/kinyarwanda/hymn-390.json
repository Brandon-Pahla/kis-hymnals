  "title": "390 Mbes'Aho Tuzahurira Ku Cyambu? (B)",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 390 Mbes'Aho Tuzahurira Ku Cyambu? (B)",
        "**1**",
        "Mbes'aho tuzahurira,",
        "Ku cyambu cya rwa ruzi,",
        "Ahahor'umucy'iteka,",
        "Ntihab'umubabaro?",
        "**Gusubiramo:**",
        "Se koko tuzahurira hakurya y'uruzi?",
        "Tuzabonanirayo",
        "tuhanezererw'iteka?",
        "**2**",
        "Tuzahurira ku cyamb'",
        "urugendo rurangiye?",
        "Mbes'aho tuzahurirayo,",
        "Maze twiruhutse?",
        "**3**",
        "Mbes'aho twese",
        "tuzahurira mu mudugudu,",
        "Wubatswe n'Uhoraho,",
        "Urimbishijwe Yasipi?",
        "**4**",
        "Abacunguwe bose,",
        "Bazaririmb'indirimbo;",
        "Kand'ibiremwa byose,",
        "Bizasingiz'Uhoraho.",
        "**5**",
        "Mbes'aho tuzabonana n'",
        "abo twakundanaga?",
        "Maze twumv'amajwi yabo,",
        "Tubareba mu maso?",
        "**6**",
        "Mbese tuzabonana na Krist'",
        "Umukiza wacu,",
        "Aje kujyan'intore ze,",
        "Mu bwami buhoraho?"
      ],
      "number": 1
    }
  ]
}