  "title": "154 Murinzi We, Ngaho Mbwira",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 154 Murinzi We, Ngaho Mbwira",
        "**1**",
        "Murinzi we, ngaho mbwira,",
        "Mbese bugiye gucya?",
        "Nta bimenyets'urabona,",
        "K'Umwami yegereje?",
        "Mugenzi we haguruka!",
        "Umusek'uratambitse;",
        "Tyo kenyera, maz'ukeshe,",
        "Haguruka; bwakeye!",
        "**2**",
        "Murinzi we, dor'umucyo,",
        "Ukomeje gukwira!",
        "Reba naw'ibimenyetso,",
        "Bitangaza kuza kwe.",
        "Ubw'impanda zizavuga,",
        "Abapfuye bazazuka.",
        "Ubutazongera gupfa,",
        "Bibanire n'Umwami.",
        "**3**",
        "Murinzi we, vuz'impundu,",
        "Igihe kirageze!",
        "Mwese nimurangurure,",
        "Mubyamamaze hose.",
        "Mugenzi we, nawe reba;",
        "Ubwami bugeze hafi;",
        "Ngiriya Yerusalemu,",
        "Irarabagirana.",
        "**4**",
        "Murinzi, mur'uwo murwa,",
        "W'igikundiro rwose,",
        "Nih'Umwami w'i Sioni,",
        "Adutegerereje.",
        "Ubwami bwe buragutse,",
        "Buhetuy'iyi si yose;",
        "N'ubwami budahanguka;",
        "Hahirw'ababujyamo.",
        "**5**",
        "Murinzi dor'igihugu,",
        "Cy'uburumbuke cyane,",
        "Gihora kimeze neza,",
        "Nka Edeni ya kera.",
        "Gira bwangu ntuzarire,",
        "Hasigay'igihe gito,",
        "Abacungujw'amaraso",
        "bakagerayo vuba."
      ],
      "number": 1
    }
  ]
}