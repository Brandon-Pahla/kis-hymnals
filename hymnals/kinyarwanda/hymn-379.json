        "### 379 Mbeg'Umunsi Mwiza!",
        "**1**",
        "Mbeg'umunsi mwiza!",
        "N'umunsi wera de!",
        "Munsi wo kuruhukwa;",
        "Twongerwa mw'imbaraga.",
        "**2**",
        "Kand'Umwuka Wera,",
        "Aterana natwe;",
        "Agatesh'inkomyi",
        "yatubuz'umudendezo.",
        "**3**",
        "Mbeg'ikiruhuko!",
        "Gituma turamya,",
        "Imana yo mw'ijuru,",
        "Maze tugasÄbana.",
        "**4**",
        "Mbeg'umunsi mwiza,",
        "Umunsi wejejwe!",
        "Imitim'irakanguka;",
        "Tukanesh'urupfu."
      ],
      "number": 1
