  "title": " 82 Mu Gitondo Njya Ndirimba",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 82 Mu Gitondo Njya Ndirimba",
        "**1**",
        "Mu gitondo njya ndirimba,",
        "Nguhimbaza Mwami,",
        "Nguh'amasengesho,",
        "Kuko nkwiringiye.",
        "**2**",
        "Ku misozi niho Yesu,",
        "Yajyag'asabira;",
        "No gutakambira Data,",
        "Ngw adukiz'ibyago.",
        "**3**",
        "Mwam'unyoboresh'Umwuka.",
        "Mu nzir'itunganye.",
        "Untunganiriz'ubwenge,",
        "Meny'ibikwiriye.",
        "**4**",
        "Abubah'izina ryawe,",
        "Urajy'ubumvira.",
        "Ubakingir'imbabazi.",
        "Bakir'amakuba."
      ],
      "number": 1
    }
  ]
}