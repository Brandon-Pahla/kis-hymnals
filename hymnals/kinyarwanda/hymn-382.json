  "title": "382 Umubano Uba Mwiza",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 382 Umubano Uba Mwiza",
        "**1**",
        "Umubano uba mwiza,",
        "Mu rugo Yes'arimo;",
        "Urukundo ruranesha,",
        "Hab'ituze rihamye.",
        "Ikinyabupfura ni cyo",
        "kiranga urwo rugo,",
        "Umugabo n'umugore,",
        "Iyo bubah'Imana.",
        "**2**",
        "Urugo rwunguts'umwana,",
        "Hab'ibyishimo byinshi.",
        "Nahabw'uburere bwiza,",
        "Ab'umwana w'ijuru;",
        "Umwan'unezez'Imana,",
        "Kand'uzabana na yo;",
        "Abane n'Umwami Yesu,",
        "Kand'ayoborwe na we.",
        "**3**",
        "Urugo rwa hano mw'isi,",
        "n'urw'igihe kigufi,",
        "N'ubund'ibyo mw'isi byose,",
        "Ntabwo biramba rwose.",
        "Ibyiza birut'ibindi,",
        "Kandi bizahoraho,",
        "Tuzahurizwa mw'ijuru;",
        "Tuzabana by'iteka.",
        "**4**",
        "Ibyo duhabwa n'Imana",
        "mu rugendo turimo;",
        "Tubyakiran'ibyishimo,",
        "Tubyifatemo neza.",
        "Twirinde gutsindwa",
        "n'ibigeragezo by'Umwanzi;",
        "Dusarur'iby'urukundo,",
        "Rw'Imana yac'iduha."
      ],
      "number": 1
    }
  ]
}