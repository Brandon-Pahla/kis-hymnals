  "title": "363 Yesu Mu Bugingo Bwanjye",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 363 Yesu Mu Bugingo Bwanjye",
        "**1**",
        "Mbese har'icyanezeza,",
        "Nko kubana na Yesu?",
        "Nta cyanezeza nko kubana",
        "N'uwo munyakuri.",
        "**Gusubiramo:**",
        "Niba har'ikinezeza,",
        "Kurut'ibindi byose;",
        "Yesu mu bugingo bwanjye,",
        "Rwos'andutira byose",
        "**2**",
        "Yitangiye kuncungura,",
        "Kubw'ubuntu bw'Imana.",
        "Urukundo rwe rusumb'",
        "Ijuru n'inyanja zose.",
        "**3**",
        "Ntacyo nshobora gukena,",
        "Mfit'uwo Mucunguzi.",
        "Ni w'ump'ibyo nkennye",
        "Byose, Ni w'unshoboza byose.",
        "**4**",
        "Ku mugez'ubengerana,",
        "Nzaririmb'indirimbo;",
        "Ndi kumwe n'abarokotse,",
        "Turirimbir'Imana."
      ],
      "number": 1
    }
  ]
}