  "title": "157 N'Igihe Cy'Isarura",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 157 N'Igihe Cy'Isarura",
        "**1**",
        "Nib'umunt'agend'arira,",
        "Asohoy'imbuto nziza,",
        "Ntacogora ngw'agw'isari,",
        "Ahirwa n'Uwiteka.",
        "**Gusubiramo:**",
        "Yemwe ga ngo zirakura!",
        "Reba uko zingana!",
        "Imirima yos'ireze,",
        "N'igihe cy'isarura.",
        "**2**",
        "Ikime kiva mw'ijuru,",
        "N'umucy'urabagirana.",
        "Bizatum'imbuto zera,",
        "Kubw'ubuntu bw'Imana.",
        "**3**",
        "Bib'imbuto wicogora,",
        "Woye gukuk'umutima,",
        "N'ubw'iby'ubon'ar'umwaku,",
        "Uzasarur'ishimwe."
      ],
      "number": 1
    }
  ]
}