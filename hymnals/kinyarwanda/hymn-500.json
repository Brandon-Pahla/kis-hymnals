  "language": "rw",
  "title": "500 Ku Marembo Y'Ijuru",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 500 Ku Marembo Y'Ijuru",
        "**1**",
        "Tuzahura mu gitondo,",
        "Ku marembo y'ijuru;",
        "B'umugenzi wo kwizerwa,",
        "Utazakerererwa.",
        "**Gusubiramo:**",
        "**Sop. :**",
        "Tuzahura mu gitondo,",
        "Duhurire kw'irembo ry'ijuru.",
        "Tuzahura mu gitondo,",
        "Duhurire mw'ijuru mu byishimo.",
        "**A., T. na B. :**",
        "Tuzahura mu gitondo,",
        "Mu gitondo, mu gitondo,",
        "Duhurire kw'irembo",
        "ry'ijuru (ry'ijuru).",
        "Tuzahura mu gitondo,",
        "Mu gitondo, mu gitondo,",
        "Duhurire mw'ijuru mu byishimo.",
        "**2**",
        "Nimutebutse kuza kwe,",
        "Mwe gutinda mu nzira;",
        "Dor'araza mu gitondo,",
        "Aradutegereje.",
        "**3**",
        "Rek'umucyo wawe wake,",
        "Yes'arategereje.",
        "Tuzabana na w'iteka,",
        "Mw'iteraniro ryiza!",
        "**4**",
        "Naza n'ibyishimo byinshi,",
        "Ku marembo y'ijuru;",
        "Mbeg'iteraniro ryiza,",
        "Turi kumwe n'abera!"
      ],
      "number": 1
    }
  ]
}