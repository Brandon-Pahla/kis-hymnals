  "title": "429 Intekerezo Zanjye Zibera Mw'Ijuru",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 429 Intekerezo Zanjye Zibera Mw'Ijuru",
        "**1**",
        "Dor'intekerezo zanjye",
        "zibera mw'ijuru,",
        "Ibyiringiro byanjye",
        "ni ho bituriza;",
        "Mu mucyo w'Uwiteka,",
        "Yes'azaduhuriza;",
        "Mw'ijuru, ibudapfa",
        "ni ho tuzibera.",
        "**2**",
        "Mw'ijuru nta mibabaro,",
        "Tuzaba dutuje;",
        "Tuzahanagurw'amarira tugezeyo.",
        "Nta rupfu ruzabayo,",
        "nta kiduhungabanya;",
        "Tuzabana by'iteka,",
        "Turi mu mahoro.",
        "**3**",
        "Mbeg'ukuntu tuzishima,",
        "Twongeye guhura,",
        "N'abo twari",
        "twaratandukanijwe kera!",
        "Mw'iteraniro ryiza,",
        "Maze duhoberane,",
        "Twibere mu byishimo",
        "bitazahinduka.",
        "**4**",
        "Mbeg'inanga z'izahabu",
        "zizacurangwayo!",
        "Ubw'abacunguwe",
        "bazaba bateranye.",
        "Yes'azatuzamura,",
        "Atugeze mw'ijuru,",
        "Dusingiz'urukundo,",
        "Twakunzwe n'Imana."
      ],
      "number": 1
    }
  ]
}