  "title": "  3 Nzabona Yesu",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "### 3 Nzabona Yesu.",
        "**1**",
        "Nzabona Yesu mu maso,",
        "Umuns'azatujyana;",
        "Niho nzamwitegereza,",
        "Kw'ari we wampfiriye.",
        "**Gusubiramo:**",
        "Nzamurora mu maso ye,",
        "Turi kumwe mw'ijuru;",
        "Meny'uk'ubwiza bwe busa,",
        "Nzamusingiz'iteka.",
        "**2**",
        "Ubu ndamutekereza,",
        "Ariko simurora;",
        "Umuns'uhiriw'uzaza,",
        "Nzamubonan'ubwiza.",
        "**3.**",
        "Tuzishimir'imbere ye,",
        "Ubw'ishavu rishize;",
        "Ibigande biganduwe,",
        "N'ahijimye hakeye.",
        "**4.**",
        "Nzanezererw'imbere ye,",
        "Nzamurora mumenye;",
        "Nzabana na Yes'unkunda,",
        "Niwe Mukiza wanjye."
      ],
      "number": 1
    }
  ]
}