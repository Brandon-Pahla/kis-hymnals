{
  "number": 198,
  "language": "ny",
  "title": "198 - Bwenzi Labwino Ndilo Yesu",
  "stanzas": [
    {
      "type": "verse",
      "lines": [
        "THE BEST FRIEND IS JESUS"
      ],
      "number": 1
    },
    {
      "type": "verse",
      "lines": [
        "1. Bwenzi labwino ndilo Yesu,",
        "Mmene muvutidwa m’dzikoli;",
        "Alimbitsa mtimamo,",
        "Atipatsa mphamvunso,",
        "Bwenzi labwino ndilo yesu."
      ],
      "number": 2
    },
    {
      "type": "chorus",
      "lines": [
        "Kulibe woposa Yesu (Yesuyo),",
        "Kulibe woposa Yesu (Yesuyo);",
        "Pogwa athangatadi,",
        "Poitana ’dzamvatu;",
        "Bwenzi labwino ndilo Yesu."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "2. Ndinapezatu bwenzi Yesu,",
        "Atonthoza moyo wangawu,",
        "M’mene ndimtsamira ’Ye,",
        "Sin’dzaopa m’daniyo,",
        "Bwenzi labwino ndilo Yesu."
      ],
      "number": 3
    },
    {
      "type": "verse",
      "lines": [
        "3. Pakuyenda usiku wo’psa",
        "Wa chisoni ndi wa imfayo,",
        "Sindiopa konse bi,",
        "Yesu ap’lumutsadi,",
        "Bwenzi labwino ndilo Yesu."
      ],
      "number": 4
    },
    {
      "type": "verse",
      "lines": [
        "4. Podzafika kumwamba konko,",
        "Tonse okhulupirika ’fe,",
        "Inde, tidzayimbadi",
        "Kumtamanda Iyeyo,",
        "Bwenzi labwino ndilo Yesu."
      ],
      "number": 5
    }
  ]
}